generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Article {
  id           String   @id @default(cuid())
  title        String
  contents     String
  date         DateTime @default(now())
  categoryId   String
  thumbnailId  String?
  thumbnailUrl String?
  Category     Category @relation(fields: [categoryId], references: [id])
}

model Category {
  id      String    @id
  name    String
  Article Article[]
}
